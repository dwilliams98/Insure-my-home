<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Insure my home</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='style.css'>
    <script src='axios.min.js'></script>
    <script src='site.js'></script>
</head>

<body>
    <div class="menu">
        <ul class="nav justify-content-end">
            <li class="nav-item color-white">
                <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item color-white">
                <a class="nav-link" href="/register">Register</a>
            </li>
        </ul>
    </div>
    <div class="box">
        <div class="register_container">
            <form onsubmit="register(event)" autocomplete="off">
                <div class="center">
                    <h2>Create user account</h2>
                </div>
                <div class="space_top">
                    <div>
                        <label>User Name</label>
                    </div>
                    <input type="text" class="form-control" required onchange="getRegisterUsername(value)">
                </div>
                <div class="space_top">
                    <div>
                        <label>Password</label>
                    </div>
                    <input type="password" class="form-control" required onchange="getRegisterPassword(value)">
                </div>
                <div class="space_top">
                    <div>
                        <label>Confirm Password</label>
                    </div>
                    <input type="password" class="form-control" required
                        onchange="getRegisterConfirmPassword(value)">
                </div>
                <div class="space_top right">
                    <button type="submit" class="btn btn-success">Register</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>